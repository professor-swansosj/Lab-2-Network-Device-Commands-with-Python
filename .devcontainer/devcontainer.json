{
  "name": "network-automation-lab",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "/bin/bash -lc 'pip install -r requirements.txt && chmod +x .devcontainer/post_create.sh .devcontainer/post_start.sh && .devcontainer/post_create.sh'",
  "postStartCommand": "/bin/bash -lc '.devcontainer/post_start.sh || true'",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ]
}
